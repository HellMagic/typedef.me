<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :all %>
  <%= csrf_meta_tag %>
</head>
<body>
  <header>
    <h1><%= link_to title, root_url %></h1>
    <nav>
      <ol>
        <% Page.published.each do |page| %>
          <li>
            <%= link_to page.slug, page %>
          </li>
        <% end %>
      <ol>
    </nav>
  </header>
  <div class="clear"></div>

  <div id="main">
    <%= yield %>

    <% if Rails.env.development? %>
      <%= debug(params) %>
    <% end %>
  </div>

</body>
</html>
