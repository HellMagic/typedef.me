<h2>Dashboard</h2>
<table>
  <tr>
  	<th>Title</th>
  	<th>Comments</th>
  	<th>Published</th>
    <th>Date</th>
  </tr>
  <% @posts.each do |post| %>
    <tr>
      <td><%= link_to post.title, post %></td>
      <td><%= post.comments.count %></td>
      <td><%= post.published %></td>
      <td><%= post.created_at %></td>
    </tr>
  <% end %>
</table>
