<div class="page_title">
  <h2><%= link_to page.title, page_url(page) %></h2>
  <%if logged_in? %>
    <%= link_to "[edit]", edit_admin_page_url(page) %>
  <% end %>
</div>

<div class="page_info">
  Posted on <%= page.published_at.strftime("%Y-%m-%d %X") %>
</div>

<div class="page_content">
  <%= markdown page.content %>
</div>
